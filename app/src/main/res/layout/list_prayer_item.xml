<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <TextView
        android:id="@+id/txt_prayer_title"
        android:text="Title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_title_default"
        android:layout_toLeftOf="@+id/cbox_read"
        android:layout_toStartOf="@+id/cbox_read" />

    <TextView
        android:id="@+id/txt_prayer_description"
        android:text="Description"
        android:textSize="@dimen/text_size_description_default"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_below="@+id/txt_prayer_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/cbox_read"
        android:layout_toStartOf="@+id/cbox_read" />

    <CheckBox
        android:id="@+id/cbox_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>